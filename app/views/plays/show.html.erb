<div class="ro">
	<div class="col-md-4">
		<%= image_tag @play.play_img.url, class: "play-show" %>
	</div>
	<div class="col-md-8">
		<div class="play-info">
			<h2 class="play-title"><%= @play.title %></h2>
			<h3 class="play-director"><span>From</span> <%= @play.director %></h3>
			<h4 class="play-director"><%= @play.category.name %></h4>
			<p class="play-desc"><%= @play.description %></p>
		</div>
		
	</div>

</div>
<div class="links btn-group">
	<% if user_signed_in? && @play.user_id == current_user.id %>
		<%= link_to "Edit", edit_play_path(@play) %>
		<%= link_to "Delete", play_path(@play), method: :delete %>
	<% end %>
</div>
