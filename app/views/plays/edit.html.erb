<h1>Edit Broadway Play</h1>
<%= simple_form_for @play do |f| %>
	<%= f.select :category_id, @categories, html: {multipart: true } %>
	<%= f.file_field :play_img %>
	<%= f.input :title, label: "Play Title" %>
	<%= f.input :description %>
	<%= f.input :director %>
	<%= f.button :submit %>
<% end %>